{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "mocha": true,
        "node": true,
        "jest": true,
        "jasmine": true
    },
    "parser": "babel-eslint",
    "rules": {
        "max-len": [
            1,
            {
                "code": 120,
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignorePattern": "^import\\s.+"
            }
        ],
        "quote-props": 0,
        "default-case": 0,
        "object-curly-newline": 0,
        "arrow-body-style": 0,
        "no-unreachable": 0,
        "no-underscore-dangle": 0,
        "no-return-assign": 0,
        "key-spacing": [
            2,
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "beforeColon": false,
                    "afterColon": true,
                    "align": "value"
                }
            }
        ],
        "no-multi-spaces": [
            0,
            {
                "exceptions": {
                    "VariableDeclarator": true
                }
            }
        ],
        "no-var": 2,
        "vars-on-top": 0,
        "comma-dangle": 0,
        "new-cap": 0,
        "no-console": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "valid-jsdoc": 0,
        "import/no-extraneous-dependencies": [
            "off"
        ],
        "import/prefer-default-export": "off",
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "class-methods-use-this": 0,
        "strict": 0,
        "no-param-reassign": 0,
        "no-mixed-operators": "off"
    },
    "plugins": [],
    "settings": {
        "import/resolver": {
            "babel-module": {}
        },
        "import/extensions": [
            ".js"
        ]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "$": true,
        "google": true,
        "Promise": true,
        "Chart": true,
        "Cropper": true,
        "grecaptcha": true,
        "recaptchaSiteKey": true,
        "__DEV__": true
    }
}
